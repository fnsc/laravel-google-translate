{
    "name": "fnsc/laravel-kafka-drive",
    "description": "Laravel package to work with Apache Kafka",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0",
        "illuminate/console": "^9.0",
        "illuminate/config": "^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "leroy-merlin-br/coding-standard": "^3.1",
        "rector/rector": "^0.15.13",
        "phpstan/phpstan": "^1.9",
        "phpro/grumphp": "^1.15",
        "mockery/mockery": "^1.5",
        "orchestra/testbench": "^7.22"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Fnsc\\LaravelKafka\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Gabriel Fonseca"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true
        }
    }
}
